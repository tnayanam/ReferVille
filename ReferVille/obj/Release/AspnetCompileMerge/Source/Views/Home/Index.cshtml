@{
    ViewBag.Title = "ReferVille";
}
<div id="myCarousel" class="carousel slide css-carousel-color" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active">
            <img class="imgbanner" src="~/Content/Images/15.jpeg" alt="Los Angeles" style="width:100%;opacity:0.2;">
            <div class="carousel-caption">
                <h2 class="brand-bold">Get hired to your<br class="hide-desktop"> dream company.</h2>
                <h5 class="brand">On ReferVille, you can apply to your dream companies and get<br class="hide-mobile"> your profiles internally referred by the Employees of that company.</h5>
            </div>
        </div>

        <div class="item">
            <img class="imgbanner" src="~/Content/Images/20.jpeg" alt="Chicago" style="width:100%;opacity:0.2;">
            <div class="carousel-caption">
                <h2 class="brand-bold">Hire top candidates<br class="hide-desktop"> for your team.</h2>
                <h5 class="brand">On ReferVille, you can apply to your dream companies and get<br class="hide-mobile"> your profiles internally referred by the Employees of that company.</h5>
            </div>
        </div>

        <div class="item">
            <img class="imgbanner" src="~/Content/Images/10.jpeg" alt="New York" style="width:100%; opacity:0.2;">
            <div class="carousel-caption">
                <h2 class="brand-bold">We're here<br class="hide-desktop"> to help you.</h2>
                <h5 class="brand">On ReferVille, you can apply to your dream companies and get<br class="hide-mobile"> your profiles internally referred by the Employees of that company.</h5>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control css-carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control css-carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></i></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="how page-content">
    <div class="how-content">
        <div class="how-content-block">
            <h3 class="how-header brand-bold">How ReferVille Works</h3>
            <ul class="how-content-list">
                <li class="how-content-list-item how-post">
                    <div class="how-icon how-icon--post"><i class="fa fa-search fa-2x"></i></div>
                    <p class="css-bold">
                        Find most deserving candidates<br class="hide-medium"> for your team.
                    </p>
                </li>
                <li class="how-content-list-item how-bid">
                    <div class="how-icon how-icon--bid"><i class="fa fa-users fa-2x" aria-hidden="true"></i></div>
                    <p class="css-bold">
                        Refer them in your company,<br class="hide-medium"> as a potential peers.
                    </p>
                </li>
                <li class="how-content-list-item how-engage">
                    <div class="how-icon how-icon--engage"><i class="fa fa-usd fa-2x" aria-hidden="true"></i></div>
                    <p class="css-bold">
                        Earn unlimited rewards and satisfaction<br class="hide-medium"> of helping a junior find his niche.
                    </p>
                </li>
            </ul>
        </div>
    </div>
</div>

     