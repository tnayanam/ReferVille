@{
    ViewBag.Title = "ReferVille";
}
<div id="myCarousel" class="carousel slide css-carousel-color" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active">
            <img class="imgbanner" src="~/Content/Images/15.jpeg" alt="Los Angeles" style="width:100%;opacity:0.2;">
            <div class="carousel-caption">
                <h2 class="brand-bold">Get hired to your<br class="hide-desktop"> dream company.</h2>
                <h5 class="brand">On ReferVille, you can apply to your dream companies and get<br class="hide-mobile"> your profiles internally referred by the Employees of that company.</h5>
            </div>
        </div>

        <div class="item">
            <img class="imgbanner" src="~/Content/Images/20.jpeg" alt="Chicago" style="width:100%;opacity:0.2;">
            <div class="carousel-caption">
                <h2 class="brand-bold">Refer candidates<br class="hide-desktop"> in your company.</h2>
                <h5 class="brand">On ReferVille, you can apply to your dream companies and get<br class="hide-mobile"> your profiles internally referred by the Employees of that company.</h5>
            </div>
        </div>

        <div class="item">
            <img class="imgbanner" src="~/Content/Images/10.jpeg" alt="New York" style="width:100%; opacity:0.2;">
            <div class="carousel-caption">
                <h2 class="brand-bold">We're here<br class="hide-desktop"> to help you.</h2>
                <h5 class="brand">On ReferVille, you can apply to your dream companies and get<br class="hide-mobile"> your profiles internally referred by the Employees of that company.</h5>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control css-carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control css-carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

     