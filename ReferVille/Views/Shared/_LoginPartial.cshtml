@using Microsoft.AspNet.Identity
@using System.Security.Claims
@using ReferVille.Helpers
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + @ClaimsPrincipal.Current.GetFirstName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                   </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Blog", "Index", "Blog", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("About Us", "Index", "AboutUs", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li>@Html.ActionLink("Contact Us", "Index", "ContactUs", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li class="dropdown" data-admin-menu>
            <a href="#">
                <i class="fa fa-user" aria-hidden="true"></i>
                My Account
                <span class="glyphicon glyphicon-chevron-down"></span>
            </a>
            <ul class="dropdown-menu css-width" role="menu">
                <li><a href="/Account/Register">&nbsp;&nbsp;Sign Up</a></li>
                <li><a href="/Account/Login">&nbsp;&nbsp;Log In</a></li>
            </ul>
        </li>
    </ul>
}

